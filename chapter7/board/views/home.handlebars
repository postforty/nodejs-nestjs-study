<h1>{{title}}</h1>

<input
  type="text"
  name="search"
  id="search"
  value="{{search}}"
  size="50"
  placeholder="검색어를 입력하세요"
/>
<button
  onclick="location.href=`/?search=${document.getElementById('search').value}`"
>검색</button>
<br />

<a href="/write">글쓰기</a>
<br />

<div>
  <table>
    <thead>
      <tr>
        <th width="50%">제목</th>
        <th>작성자</th>
        <th>조회수</th>
        <th>등록일</th>
      </tr>
    </thead>
    <tbody>
      {{!-- each 반복문 --}}
      {{#each posts}}
        <tr>
          <td><a href="/detail">{{title}}</a></td>
          <td align="center">{{writer}}</td>
          <td align="center">{{hits}}</td>
          <td align="center">{{dateString createdDt}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div>
  {{!-- with : paginator.pageList 에서 paginator을 생략하기 위해 사용 --}}
  {{#with paginator}}
  <a href="/?page=1&search={{@root.search}}">&lt;&lt;</a>
  {{#if hasPrev}}
  {{!-- @root.search : 서버가 보낸 원본 값 --}}
  <a href="/?page={{prevPage}}&search={{@root.search}}">&lt;</a>
  {{else}}
  <a>&lt;</a>
  {{/if}}
  {{#each pageList}}
  {{!-- eq 커스텀 함수 : .(this) === @root.paginator.page --}}
  {{#if (eq . @root.paginator.page)}}
  <a>{{.}}</a>
  {{else}}
  <a href="/?page={{nextPage}}&search={{@root.search}}">&gt;</a>
  {{else}}
  <a>&gt;</a>
  {{/if}}
  <a href="/?page={{lastPage}}&search={{@root.search}}">&gt;&gt;</a>
  {{/with}}
</div>